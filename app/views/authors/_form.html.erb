<%= form_for(@author) do |f| %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h5>Oops!
        <%= pluralize(@author.errors.count, "error") %> prohibited this author from being saved:</h5>

      <ul>
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="span3">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :email_address, "Email" %>
    <%= f.text_field :email_address %>

    <%= f.label :author_image, "Photo" %>
    <%= f.file_field  :author_image %>


    <% if @author.persisted? %>
      <% unless @author.author_image.size.blank?%>
      <%= image_tag @author.author_image.thumb.url, class: "author_photo_small " %>
          <% end %>
    <% end %>


      </div>
      <div class="span4 offset1">

        <%= f.label :biography, "Biography" %>
        <%= f.text_area :biography, id: "biography" %>

    <%= f.submit %>
  </div>
</div>
<% end %>

